<div class="leaderboard-asset-index">
  <table class="table table-striped table-dark container-table container">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Points Qual</th>
        <th scope="col">Prize Pool</th>
        <th scope="col">Buy In</th>
        <th scope="col">Entrants</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody class="event-index-cursor">
      <% @events.each.with_index(1) do |event, index| %>
        <tr onclick="location.href='<%= poker_assets_leaderboard_event_url(event) %>'">
          <td><%= index %></td>
          <td><%= event.name %></td>
          <td><%= event.points_qual %></td>
          <td><%= number_to_currency(event.prize_pool, unit: "$", separator: ",", precision: 0) %></td>
          <td><%= number_to_currency(event.buy_in, unit: "$", separator: ",", precision: 0) %></td>
          <td><%= event.entrants %></td>
          <td><%= event.date.strftime("%m-%d-%Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
